@using CabManagementSystem.Domain.Entities;


@{
    ViewBag.Title = "dashboard";
    TempData.Keep("user");
    TempData.Keep("id");
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<title>Cab Management System</title>
<div style="text-align: center; padding-top: 50px; ">
    @using (Html.BeginForm())
    {
        @Html.Raw(ViewBag.ErrorMessage)
        <section style="align-self:center; margin-left:20%">
            @Html.AntiForgeryToken()
            <fieldset style="border:1px; border-block-color:black" >
                <legend>Change Password</legend><br /><br />
                <table>
                    <tr>
                        <td>@Html.Label("Old Password", new { @for = "Password" }) :</td>
                        <td>@Html.Password("Password")</td>
                    </tr>
                    <tr>
                        <td>@Html.Label("New Password", new { @for = "newPassword" }) :</td>
                        <td>@Html.Password("newPassword")</td>
                    </tr>
                    <tr>
                        <td>@Html.Label("Confirm New Password", new { @for = "Confirmpwd" }) : </td>
                        <td>@Html.Password("Confirmpwd")</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><br />
                        <input type="submit" value="Change Password" class="btn btn-success"/></td>
                    </tr>
                    <tr><td>&emsp;</td></tr>
                </table>
            </fieldset>
        </section>
    }
</div>@Html.Raw(TempData["msg"])

