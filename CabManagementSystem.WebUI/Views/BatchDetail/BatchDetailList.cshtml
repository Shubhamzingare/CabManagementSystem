@model CabManagementSystem.WebUI.Models.BatchDetailViewModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search Shift Details By Shift ID</title>
</head>
<body>
    <button class="fa-solid fa-plus" align="center">@Html.ActionLink("Add New Batch", "Create", "BatchDetail", new { @class = "fa-solid fa-plus" })</button>
    <table class="table table-bordered table-striped m-auto">
        <thead>
            <tr class="table-dark text-center">
                <th>Batch ID</th>
                <th>Total Employees In Batch</th>
                <th>Shift ID</th>
                <th style="width: 25%">Actions</th>
            </tr>
        </thead>
        <thead>
            @foreach (var p in Model.BatchDetails)
            {
                <tr>
                    @Html.Partial("BatchDetailSummery", p)
                </tr>
            }
        </thead>
    </table>
    <div class="pagination justify-content-center">
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("BatchDetailList", new { page = x }))

    </div>
</body>
</html>
