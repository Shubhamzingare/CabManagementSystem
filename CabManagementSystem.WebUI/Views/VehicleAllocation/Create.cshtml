@model CabManagementSystem.Domain.Entities.VehicleAllocationDetail

@{
    ViewBag.Title = "Add New Allocation";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="panel">
    <div class="panel-heading">
        <h3>Allocate New Vehicle</h3>
    </div>

    @using (Html.BeginForm("Create", "VehicleAllocation", FormMethod.Post))
    {
        <div class="form-horizontal " style="width: 800px; margin:50px; align-content:center">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label for="vehicleAlloId"><b>Vehicle Allocation ID</b></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.vehicleAlloId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.vehicleAlloId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <label for="vehicleId"><b>Vehicle ID</b></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.vehicleId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.vehicleId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="empId"><b>Employee ID</b></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.empId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.empId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="driverId"><b>Driver ID</b></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.driverId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.driverId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="pickOrDrop"><b>Pickup Drop</b></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.pickOrDrop, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.pickOrDrop, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="panel-footer">
                <input type="submit" value="Save" class="btn btn-success" />

                @Html.ActionLink("Cancle And Return to List", "VehicleAllocationList", null, new { @class = "btn btn-default" })
            </div>

        </div>
    }
</div>
