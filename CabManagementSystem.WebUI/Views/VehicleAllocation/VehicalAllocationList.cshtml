@model CabManagementSystem.WebUI.Models.VehicleAllocationViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vehical Allocation List</title>
</head>
<body>
    <div>
        <table class="table table-bordered table-responsive table-condensed">
            <thead>
                <tr class="bg-dark">
                    <th>Vehical Allocation ID</th>
                    <th>Vehicle ID</th>
                    <th>Employee ID</th>
                    <th>Driver ID</th>
                    <th>Pickup or Drop</th>
                    <th>Route ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.VehicleAllocations)

                {
                    <tr>
                        @Html.Partial("VehicleAllocationSummery", p)
                    </tr>
                }
            </tbody>

        </table>
    </div>
    <div class="btn-group pull-right" align="right">
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("VehicleAllocationList", new { page = x }))

    </div>

</body>
</html>
