@model CabManagementSystem.WebUI.Models.VehicleAllocationViewModel

@{
    ViewBag.Title = "Vehicle Allocation Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vehicle Allocation</title>
</head>
<body>
    <button class="fa-solid fa-plus" align="center">@Html.ActionLink("Add New Allocation", "Create", "VehicleAllocation", new { @class = "fa-solid fa-plus" })</button>
    <table class="table table-bordered table-striped m-auto">
        <thead>
            <tr class="table-dark text-center">
                <th>Vehicle Allocation ID</th>
                <th>Vehicle ID</th>
                <th>Employee ID</th>
                <th>Driver ID</th>
                <th>Pickup/Drop</th>
                <th>Route ID</th>

            </tr>
        </thead>
        <thead>
            @foreach (var p in Model.VehicleAllocations)
            {
                <tr>
                    @Html.Partial("VehicleAllocationSummery", p)
                </tr>
            }
        </thead>
    </table>
    <div class="pagination justify-content-center">
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("VehicleAllocationList", new { page = x }))

    </div>
</body>
</html>
