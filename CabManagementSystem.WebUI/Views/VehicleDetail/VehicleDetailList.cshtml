@model CabManagementSystem.WebUI.Models.VehicleDetailListViewModel

@{
    ViewBag.Title = "Vehicle Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<title>Cab Management System</title>



@*==========================*@


<div class="panel panel-default">
    <div class="panel-body" style="float:none;margin:auto;">
        <button class="btn btn-info" align="center" style="margin:1cm">
            <i class="fa-solid fa-plus"></i>
            @Html.ActionLink("Add New Vehicle", "Create", "VehicleDetail", new { @class = "btn btn-info" })
        </button>
        <table class="table  table-hover w-auto" style="color:white; font-weight:100; font-family:'Times New Roman', Times, serif;margin:1cm;margin-top:0">
            <thead>
                <tr>
                    <td colspan="10" align="center">
                        <h2>Vehicles Available</h2>
                    </td>
                </tr>
                <tr class="table-dark">
                    <th>Vehicle ID</th>
                    <th>Vehicle Name</th>
                    <th>Vender ID</th>
                    <th>Driver ID</th>
                    <th>Vehicle Type</th>
                    <th>Vehicle Number</th>
                    <th>Rate Per KM</th>
                    <th>Capacity</th>
                    <th>Route ID</th>
                    <th style="width: 25%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.VehicleDetails)

                {
                    @Html.Partial("VehicleDetailSummery", p)
                }


                <tr>
                    <td colspan="10" align="center">

                        @Html.PageLinks(Model.PagingInfo, x => Url.Action("VehicleDetailList", new { page = x }))
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
</div>
