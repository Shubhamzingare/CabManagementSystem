@model CabManagementSystem.WebUI.Models.EmployeeListViewModel

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered table-hover  w-auto">
            <thead>
                <tr>
                    <td colspan="13" align="right">
                        <button class="fa-solid fa-plus" align="right">@Html.ActionLink("Add New Employee", "Create", "Employee", new { @class = "fa-solid fa-plus" })</button>
                    </td>
                </tr>
                <tr class="table-dark">
                    <th>ID</th>
                    <th>Name</th>
                    <th>Permanent Address</th>
                    <th>Communication Address</th>
                    <th>Qualifications</th>
                    <th>Date Of Birth</th>
                    <th>Vehicle required (Yes/No)</th>
                    <th>Gender</th>
                    <th>Phone Number</th>
                    <th>Designation</th>
                    <th>Department</th>
                    <th>Date of Joining</th>
                    <th style="width: 25%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Employees)

                {
                    @Html.Partial("EmployeeSummery", p)
                }
                <tr>
                    <td colspan="13" align="right">

                        @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
</div>
