@model CabManagementSystem.WebUI.Models.EmployeeListViewModel

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<title>Cab Management System</title>

<div class="panel panel-default" >
    <div class="panel-body" style="float:none;margin:auto;">
        <button class="btn btn-info" align="center" style="margin:1cm">
            <i class="fa-solid fa-plus"></i>
            @Html.ActionLink("Add New Employee", "Create", "Employee", new { @class = "btn btn-info" })
        </button>
        <table class="table  table-hover w-auto" style="color:white; font-weight:100; font-family:'Times New Roman', Times, serif;margin:1cm;margin-top:0">
            <thead>
                <tr>
                    <td colspan="13" align="center">
                        <h2>Employees</h2>
                    </td>
                </tr>
                <tr class="table-dark">
                    <th>ID</th>
                    <th>Name</th>
                    <th>Permanent Address</th>
                    <th>Communication Address</th>
                    <th>Qualifications</th>
                    <th>Date Of Birth</th>
                    <th>Vehicle required (Yes/No)</th>
                    <th>Gender</th>
                    <th>Phone Number</th>
                    <th>Designation</th>
                    <th>Department</th>
                    <th>Date of Joining</th>
                    <th style="width: 25%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Employees)

                {
                    @Html.Partial("EmployeeSummery", p)
                }
                <tr>
                    <td colspan="13" align="right">

                        @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
</div>
