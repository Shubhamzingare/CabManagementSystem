@model IEnumerable<CabManagementSystem.WebUI.Models.VehicleBillViewModel>

@{
    ViewBag.Title = "Vehicle Bills";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



<div class="panel panel-default">
    <div class="panel-body" style="float:none;margin:auto;">
        <button class="btn btn-info" align="center" style="margin:1cm">
            <i class="fa-solid fa-plus"></i>
            @Html.ActionLink("Add New Bill", "Create", "VehicleBillList", new { @class = "btn btn-info" })
        </button>
        <table class="table  table-hover w-auto" style="color:white; font-weight:100; font-family:'Times New Roman', Times, serif;margin:1cm;margin-top:0">
            <thead>
                <tr>
                    <td colspan="8" align="center">
                        <h2>Trips</h2>
                    </td>
                </tr>
                <tr class="table-dark">
                    <th>Bill ID</th>
                    <th>Bill No</th>
                    <th>Vehicle ID</th>
                    <th>Total amount</th>
                    <th>Date of billing</th>
                    <th>Vender ID</th>
                    <th>Deductions (amount)</th>
                    <th>Net amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.VehicleBills.billId</td>
                        <td>@p.VehicleBills.billNum</td>
                        <td>@p.VehicleBills.vehicleId</td>
                        <td>@((p.VehicleDetails.ratePerKM*p.TripSheets.distanceTravelled))</td>
                        <td>@p.VehicleBills.dateOfBilling</td>
                        <td>@p.VehicleBills.vehicleId</td>
                        <td>@p.VehicleBills.deductions</td>
                        <td>@(((p.VehicleDetails.ratePerKM * p.TripSheets.distanceTravelled) - p.VehicleBills.deductions))</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
