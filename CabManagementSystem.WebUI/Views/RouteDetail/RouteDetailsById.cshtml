@model IEnumerable<CabManagementSystem.WebUI.Models.RouteDetailListViewModel>

@{
    ViewBag.Title = "Search route details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Search Route Details By Id</title>
</head>
<body>

    <p>
        @using (Html.BeginForm("RouteDetailsById", "RouteDetail", FormMethod.Get))
        {

            
            <div class="form-outline mb-4">
              <b style="margin:3.5%">Search by Route ID:</b>
                    <input type="text" placeholder="Enter route ID" class="form-control input-field" style="width:30%;height:auto;margin-left:3.5%" required name="ID" />
            </div>
            <button class="btn btn-primary button-29 btn-block fa-lg gradient-custom-2 mb-3" style="color:black;margin-left:3.5%" type="submit">
                Search
            </button> <button class="btn btn-primary button-29  fa-lg gradient-custom-2 mb-3">
                 @Html.ActionLink("Back to List", "RouteDetailList", null, new
                {
                    @class = "btn btn-default",
                    style = "padding: 0.5px 0.5px;"
                })
            </button>

        }
    </p>
    <div>
        <table class="table  table-hover w-auto" style="color:white; font-weight:100; font-family:'Times New Roman', Times, serif;margin:1cm;margin-top:0">
            <thead>
                <tr class="table-dark">
                    <th>Employee ID</th>
                    <th>Employee name</th>
                    <th>Shift ID</th>
                    <th>Source location</th>
                    <th>Destination location</th>
                    <th>Batch ID</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="6" align="center" style="color:white">No Rows Found</td>
                    </tr>
                }
                @foreach (var p in Model)
                {
                    <tr class="table-dark">
                        <td>@p.RouteDetails.empId</td>
                        <td>@p.RouteDetails.empName</td>
                        <td>@p.BatchDetails.shiftId</td>
                        <td>@p.RouteDetails.sourceLOC</td>
                        <td>@p.RouteDetails.destLOC</td>
                        <td>@p.RouteDetails.batchId</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>
</html>
