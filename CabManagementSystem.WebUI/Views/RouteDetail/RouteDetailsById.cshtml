@model IEnumerable<CabManagementSystem.WebUI.Models.RouteDetailListViewModel>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Search Route Details By Id</title>
</head>
<body>
    <button class="fa-solid fa-plus" align="center">@Html.ActionLink("Create New Route", "Create", "RouteDetailsById", new { @class = "fa-solid fa-plus" })</button>

    <p>
        @using (Html.BeginForm("RouteDetailsById", "RouteDetail", FormMethod.Get))
        {
            <b>Search by Route ID:</b> <input type="text" placeholder="Enter route ID" required name="ID" /> <input type="submit" value="search" />
        }
    </p>
    <div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Employee name</th>
                    <th>Shift ID</th>
                    <th>Source location</th>
                    <th>Destination location</th>
                    <th>Batch ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="6" align="center" style="color:red">No Rows Found</td>
                    </tr>
                }
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.RouteDetails.empId</td>
                        <td>@p.RouteDetails.empName</td>
                        <td>@p.BatchDetails.shiftId</td>
                        <td>@p.RouteDetails.sourceLOC</td>
                        <td>@p.RouteDetails.destLOC</td>
                        <td>@p.RouteDetails.batchId</td>
                        <td style="width:40px">
                            @Html.ActionLink("Edit", "Edit", new { id = @p.RouteDetails.empId }) |
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
